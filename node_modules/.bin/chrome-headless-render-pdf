#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../chrome-headless-render-pdf/dist/cli/chrome-headless-render-pdf.js" "$@"
else 
  exec node  "$basedir/../chrome-headless-render-pdf/dist/cli/chrome-headless-render-pdf.js" "$@"
fi
